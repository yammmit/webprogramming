generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//
// User
//
model User {
  user_id                 Int              @id @default(autoincrement())
  user_email              String           @unique
  user_name               String?
  user_password           String
  user_created_at         DateTime         @default(now())
  user_password_updated_at DateTime?        

  groupsOwned             Group[]          @relation("GroupOwner")
  groupMembers            GroupMember[]
  invitationsReceived     Invitation[]     @relation("InvitationToUser")
  invitationsSent         Invitation[]     @relation("InvitationFromUser")
  taskAssignments         TaskAssignment[] @relation("AssignmentToUser")
  taskCompletions         TaskCompletion[] @relation("CompletionByUser")
  evaluations             TaskEvaluation[] @relation("EvaluationByUser")
}

//
// Group
//
model Group {
  group_id       Int             @id @default(autoincrement())
  group_name     String
  group_created_at DateTime      @default(now())

  owner_id       Int
  owner          User            @relation("GroupOwner", fields: [owner_id], references: [user_id])

  members        GroupMember[]
  invitations    Invitation[]
  tasks          Task[]
}

//
// GroupMember (Many-to-Many between Group & User)
//
model GroupMember {
  group_id  Int
  user_id   Int
  role      String      // 'owner' | 'member'
  joined_at DateTime @default(now())

  group     Group   @relation(fields: [group_id], references: [group_id])
  user      User    @relation(fields: [user_id], references: [user_id])

  @@id([group_id, user_id])
}

//
// Invitation (초대 시스템)
//
model Invitation {
  invitation_id  Int      @id @default(autoincrement())
  group_id       Int
  invited_user_id Int
  invited_by     Int
  status         String   // 'pending' | 'accepted'
  created_at     DateTime @default(now())

  group       Group @relation(fields: [group_id], references: [group_id])
  invitedUser User  @relation("InvitationToUser", fields: [invited_user_id], references: [user_id])
  inviter     User  @relation("InvitationFromUser", fields: [invited_by], references: [user_id])
}

//
// Task (집안일 템플릿)
//
model Task {
  task_id        Int       @id @default(autoincrement())
  group_id       Int
  title          String
  description    String?
  difficulty     Int
  frequency_type String    // enum-like: 'daily', 'weekly', etc.
  weekday_mask   Int?      // 비트마스크
  created_at     DateTime @default(now())

  group       Group          @relation(fields: [group_id], references: [group_id])
  assignments TaskAssignment[]
}

//
// TaskAssignment (집안일 배정)
//
model TaskAssignment {
  task_assignment_id Int       @id @default(autoincrement())
  task_id            Int
  assigned_to        Int?      // nullable = 랜덤 배정 가능
  assignment_type    String?   // 'random' | 'self-request'
  status             String    // 'assigned' | 'completed'
  created_at         DateTime  @default(now())

  task        Task   @relation(fields: [task_id], references: [task_id])
  assignedTo  User?  @relation("AssignmentToUser", fields: [assigned_to], references: [user_id])
  completion  TaskCompletion?
  evaluations TaskEvaluation[]
}

//
// TaskCompletion (집안일 완료 기록)
//
model TaskCompletion {
  task_completion_id Int      @id @default(autoincrement())
  assignment_id      Int      @unique
  completed_at       DateTime @default(now())
  completed_by       Int

  assignment   TaskAssignment @relation(fields: [assignment_id], references: [task_assignment_id])
  completedBy  User           @relation("CompletionByUser", fields: [completed_by], references: [user_id])
}

//
// TaskEvaluation (평가)
//
model TaskEvaluation {
  task_evaluation_id Int       @id @default(autoincrement())
  assignment_id      Int
  evaluator_id       Int
  rating             Int
  comment            String?
  is_anonymous       Boolean
  created_at         DateTime @default(now())

  assignment TaskAssignment @relation(fields: [assignment_id], references: [task_assignment_id])
  evaluator  User           @relation("EvaluationByUser", fields: [evaluator_id], references: [user_id])

  @@unique([assignment_id, evaluator_id])
}

model LadderVote {
  ladder_vote_id Int      @id @default(autoincrement())
  task_id        Int
  user_id        Int
  vote           Boolean  @default(true)
  created_at     DateTime @default(now())

  @@unique([task_id, user_id])
  @@index([task_id])
}

model LadderResult {
  ladder_id    Int      @id @default(autoincrement())
  task_id      Int
  group_id     Int
  participants Json
  ladder_map   Json
  result_map   Json
  bottom_result Json
  assigned_to  Int
  created_at   DateTime @default(now())

  @@index([task_id])
}